<Directory /var/www/html/{{ http_host }}/public_html>
    Require all granted

    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all

</Directory>

<VirtualHost *:{{ http_port }}>
    ServerName {{ http_host }}
    ServerAlias www.{{ http_host }}
    ServerAdmin webmaster@icircletech.com
    DocumentRoot /var/www/html/{{ http_host }}/public_html

    ErrorLog /var/www/html/{{ http_host }}/logs/error.log
    CustomLog /var/www/html/{{ http_host }}/logs/access.log combined
</VirtualHost>